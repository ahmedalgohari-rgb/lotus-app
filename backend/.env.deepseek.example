# DeepSeek API Configuration for Lotus Backend
# Add this to your main .env file or source separately

# DeepSeek API Configuration (Anthropic-compatible)
ANTHROPIC_BASE_URL=https://api.deepseek.com/anthropic
ANTHROPIC_AUTH_TOKEN=sk-your-deepseek-api-key-here
ANTHROPIC_MODEL=deepseek-chat
ANTHROPIC_SMALL_FAST_MODEL=deepseek-chat

# AI Features for Lotus Plant Care App
ENABLE_AI_PLANT_IDENTIFICATION=true
ENABLE_AI_PLANT_DIAGNOSIS=true
ENABLE_AI_CARE_SUGGESTIONS=true

# AI Model Settings
AI_CONFIDENCE_THRESHOLD=0.75
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.1

# Plant Identification Service
PLANT_ID_MODEL=deepseek-chat
PLANT_ID_PROMPT_TEMPLATE="Identify this plant and provide care instructions"

# Plant Health Diagnosis
PLANT_DIAGNOSIS_MODEL=deepseek-chat
PLANT_DIAGNOSIS_PROMPT_TEMPLATE="Analyze plant health and suggest treatments"